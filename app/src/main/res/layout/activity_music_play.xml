<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 背景模糊图片 -->
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 顶部标题栏 -->
    <io.stillpage.app.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="正在播放"
        app:themeMode="dark" />

    <!-- 专辑封面区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cover"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_cover_default"
            android:contentDescription="专辑封面" />

    </androidx.cardview.widget.CardView>

    <!-- 歌曲信息区域 -->
    <LinearLayout
        android:id="@+id/ll_song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cv_cover">

        <!-- 歌曲名 -->
        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌曲名称"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- 艺术家 -->
        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="艺术家"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 进度条区域 -->
    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_song_info">

        <!-- 进度条 -->
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30"
            android:progressTint="@color/accent"
            android:thumbTint="@color/accent" />

        <!-- 时间显示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:23"
                android:textColor="@color/secondaryText"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:56"
                android:textColor="@color/secondaryText"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_progress">

        <!-- 随机播放 -->
        <ImageView
            android:id="@+id/iv_shuffle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shuffle"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="随机播放" />

        <!-- 上一首 -->
        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_skip_previous"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="上一首" />

        <!-- 播放/暂停 -->
        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/accent">

            <ImageView
                android:id="@+id/iv_play_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pause"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="20dp"
                android:tint="@android:color/white"
                android:contentDescription="播放/暂停" />

        </androidx.cardview.widget.CardView>

        <!-- 下一首 -->
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_skip_next"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="下一首" />

        <!-- 循环模式 -->
        <ImageView
            android:id="@+id/iv_repeat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_repeat"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="循环模式" />

    </LinearLayout>

    <!-- 底部功能区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 收藏 -->
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_favorite_border"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="收藏" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 播放列表 -->
        <ImageView
            android:id="@+id/iv_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_playlist_play"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="播放列表" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 分享 -->
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_share"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="分享" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
