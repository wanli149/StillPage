<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- 章节序号 -->
    <TextView
        android:id="@+id/tv_chapter_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textColor="@color/md_grey_500"
        android:textSize="12sp"
        android:minWidth="24dp"
        android:gravity="center" />

    <!-- 章节信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- 章节标题 -->
        <TextView
            android:id="@+id/tv_chapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第1话 开始"
            android:textColor="@color/md_grey_800"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="第1话 开始的故事" />

        <!-- 章节更新时间 -->
        <TextView
            android:id="@+id/tv_chapter_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="2024-01-01"
            android:textColor="@color/md_grey_400"
            android:textSize="11sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- 章节状态指示器 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 已读标记 -->
        <View
            android:id="@+id/view_read_mark"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_circle_bg"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- 更多操作按钮 -->
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="更多操作"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
