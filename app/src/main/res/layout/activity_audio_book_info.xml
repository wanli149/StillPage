<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 顶部标题栏 -->
    <io.stillpage.app.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/audio_book_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 书籍基本信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- 封面 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_cover_default"
                        android:contentDescription="@string/img_cover" />

                </androidx.cardview.widget.CardView>

                <!-- 书籍信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- 书名 -->
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/book_name"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="8dp" />

                    <!-- 作者 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:contentDescription="@string/author"
                            android:src="@drawable/ic_author"
                            app:tint="@color/secondaryText" />

                        <TextView
                            android:id="@+id/tv_author"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="@string/author"
                            android:textColor="@color/secondaryText"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 演播 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:contentDescription="@string/audio"
                            android:src="@drawable/ic_audio"
                            app:tint="@color/secondaryText" />

                        <TextView
                            android:id="@+id/tv_narrator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="演播：法公法大"
                            android:textColor="@color/secondaryText"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:ellipsize="end" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- 统计信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- 评分 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.8"
                        android:textColor="@color/primaryText"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评分"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 播放量 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_play_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1007.0k"
                        android:textColor="@color/primaryText"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_play_count_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放量"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 收藏 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="593.0k"
                        android:textColor="@color/primaryText"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_collect_count_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="播放"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_accent_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_shelf"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="收藏"
                    android:textColor="@color/accent"
                    android:background="@drawable/shape_stroke_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 功能按钮区域（移除下载按钮，保留换源与目录） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_change_source"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="换源"
                    android:textColor="@color/accent"
                    android:background="@drawable/shape_stroke_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_toc"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="目录"
                    android:textColor="@color/accent"
                    android:background="@drawable/shape_stroke_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 分割线：简介与换源/目录之间，增强层次感并避免相互遮挡 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@color/divider" />

            <!-- 简介区域（适当下移避免遮挡功能按钮文字） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/book_intro"
                    android:textColor="@color/secondaryText"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:justificationMode="inter_word" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
