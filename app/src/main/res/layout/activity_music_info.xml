<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 顶部标题栏 -->
    <io.stillpage.app.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="音乐详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 专辑封面区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- 专辑封面 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_cover_default"
                        android:contentDescription="专辑封面" />

                </androidx.cardview.widget.CardView>

                <!-- 专辑/歌曲名 -->
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="专辑名称"
                    android:textColor="@color/primaryText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- 艺术家 -->
                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="艺术家"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 统计信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- 播放量 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_play_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2万"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放量"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 收藏数 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.5k"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 分享数 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="892"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 专辑信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 来源 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来源："
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音乐源"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="[换源]"
                        android:textColor="@color/accent"
                        android:textSize="12sp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="4dp" />

                </LinearLayout>

                <!-- 发行时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发行："
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_release_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-08-05"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 类型 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型："
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流行音乐"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 简介区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专辑简介"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="展开"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是一张优秀的音乐专辑，包含了多首精彩的歌曲..."
                    android:textColor="@color/secondaryText"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- 歌曲列表区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲列表"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 歌曲列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_songs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_music_song" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 收藏按钮 -->
        <Button
            android:id="@+id/btn_collect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_common_bg"
            android:text="收藏"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_favorite_border"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- 播放全部按钮 -->
        <Button
            android:id="@+id/btn_play_all"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_fillet_btn"
            android:text="播放全部"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_play_24dp"
            android:drawablePadding="8dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
