<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_focused_on_tv"
    android:clickable="true"
    android:focusable="true"
    android:scrollbars="none"
    tools:ignore="UnusedAttribute">

    <!-- 封面图片 -->
    <io.stillpage.app.ui.widget.image.CoverImageView
        android:id="@+id/iv_cover"
        android:layout_width="66dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/img_cover"
        android:scaleType="centerCrop"
        android:src="@drawable/image_cover_default"
        android:transitionName="img_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <!-- 内容类型标签 -->
    <TextView
        android:id="@+id/tv_content_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/shape_badge_bg"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:scrollbars="none"
        android:text="书籍"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        tools:ignore="HardcodedText" />

    <!-- 右侧状态区域 -->
    <FrameLayout
        android:id="@+id/fl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title">

        <!-- 书架标记 -->
        <io.stillpage.app.ui.widget.text.BadgeView
            android:id="@+id/bv_in_bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:includeFontPadding="false"
            android:scrollbars="none"
            android:text="已收藏"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded,HardcodedText" />

        <!-- 移除非居中的转动圆圈指示器 -->
        <!-- <io.stillpage.app.ui.widget.anima.RotateLoading
            android:id="@+id/rl_loading"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:visibility="invisible"
            app:loading_width="2dp"
            tools:ignore="RtlHardcoded" /> -->
    </FrameLayout>

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:paddingLeft="2dp"
        android:paddingBottom="4dp"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="@string/book_name"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_author"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toLeftOf="@id/fl_status"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <!-- 作者图标 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_author"
        android:layout_width="@dimen/desc_icon_size"
        android:layout_height="@dimen/desc_icon_size"
        android:contentDescription="@string/author"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:scrollbars="none"
        android:src="@drawable/ic_author"
        app:layout_constraintBottom_toBottomOf="@+id/tv_author"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_author"
        app:tint="@color/tv_text_summary"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <!-- 作者 -->
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="@string/author"
        android:textColor="@color/tv_text_summary"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_intro"
        app:layout_constraintLeft_toRightOf="@+id/iv_author"
        app:layout_constraintRight_toRightOf="@id/fl_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="RtlSymmetry,TextContrastCheck" />

    <!-- 简介图标 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_intro"
        android:layout_width="@dimen/desc_icon_size"
        android:layout_height="@dimen/desc_icon_size"
        android:contentDescription="简介"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:scrollbars="none"
        android:src="@drawable/ic_description"
        app:layout_constraintBottom_toBottomOf="@+id/tv_intro"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_intro"
        app:tint="@color/tv_text_summary"
        tools:ignore="RtlHardcoded,RtlSymmetry,HardcodedText" />

    <!-- 简介 -->
    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:scrollbars="none"
        android:text="简介"
        android:textColor="@color/tv_text_summary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_latest_chapter"
        app:layout_constraintLeft_toRightOf="@+id/iv_intro"
        app:layout_constraintRight_toRightOf="@id/fl_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        tools:ignore="TextContrastCheck,HardcodedText" />

    <!-- 最新章节图标 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_latest"
        android:layout_width="@dimen/desc_icon_size"
        android:layout_height="@dimen/desc_icon_size"
        android:contentDescription="最新章节"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:scrollbars="none"
        android:src="@drawable/ic_book_last"
        app:layout_constraintBottom_toBottomOf="@+id/tv_latest_chapter"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_latest_chapter"
        app:tint="@color/tv_text_summary"
        tools:ignore="RtlHardcoded,RtlSymmetry,HardcodedText" />

    <!-- 最新章节 -->
    <TextView
        android:id="@+id/tv_latest_chapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="最新章节"
        android:textColor="@color/tv_text_summary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_latest"
        app:layout_constraintRight_toRightOf="@id/fl_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro"
        tools:ignore="TextContrastCheck,HardcodedText" />

    <!-- 前景点击效果 -->
    <View
        android:id="@+id/vw_foreground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
