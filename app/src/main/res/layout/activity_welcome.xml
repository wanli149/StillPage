<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 极致纯净版：显示"壹"字和副标题 -->
    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="壹"
        android:textSize="170sp"
        android:textStyle="normal"
        android:textColor="#1a1a1a"
        android:fontFamily="serif"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle_pure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <!-- 副标题 -->
    <TextView
        android:id="@+id/tv_subtitle_pure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的世界，只有这一页书"
        android:textSize="18sp"
        android:textColor="#666666"
        android:fontFamily="serif"
        android:layout_marginTop="35dp"
        android:lineSpacingMultiplier="1.7"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_symbol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>